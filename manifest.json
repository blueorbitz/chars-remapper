{
  "manifest_version": 2,

  "name": "Chars Remapper",
  "description": "Remap keyboard keys. Remember complicated sensitive password with easy to remember phrase.",
  "version": "0.0.0.1",

  "browser_action": {
    "default_popup": "main.html",
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    }
  },

  "permissions": [
    "storage"
  ],

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "MacCtrl+Shift+Q"
      },
      "description": "Opens main.html"
    }
  }
}